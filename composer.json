{
    "name": "rumenx/php-vcard",
    "description": "Framework-agnostic PHP package to generate vCard files, with Laravel and Symfony support.",
    "type": "library",
    "homepage": "https://github.com/RumenDamyanov/php-vcard",
    "keywords": ["vcard", "contacts", "laravel", "symfony", "php", "addressbook"],
    "support": {
        "issues": "https://github.com/RumenDamyanov/php-vcard/issues",
        "source": "https://github.com/RumenDamyanov/php-vcard"
    },
    "require": {
        "php": ">=8.3"
    },
    "minimum-stability": "stable",
    "require-dev": {
        "pestphp/pest": "^2.0 || ^3.0",
        "phpstan/phpstan": "^1.0 || ^2.0",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Rumenx\\PhpVcard\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Rumen Damyanov",
            "email": "contact@rumenx.com"
        }
    ],
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "test": "pest",
        "test-coverage": "pest --coverage",
        "test-coverage-html": "pest --coverage --coverage-html coverage",
        "test-coverage-min": "pest --coverage --min=90",
        "analyse": "phpstan analyse",
        "format": "php-cs-fixer fix",
        "format-dry": "php-cs-fixer fix --dry-run --diff",
        "ci": [
            "@test-coverage-min",
            "@analyse",
            "@format-dry"
        ]
    }
}
